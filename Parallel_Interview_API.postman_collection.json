{
    "info": {
        "name": "Parallel Interview API",
        "description": "Collection for testing parallel interview endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8005",
            "type": "string"
        },
        {
            "key": "session_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Create Parallel Interview Session",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('session_id', jsonData.session_id);",
                            "    console.log('Session ID saved: ' + jsonData.session_id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1234567890\",\n  \"questions\": [\n    \"Tell me about your experience with Python\",\n    \"What is your understanding of REST APIs?\",\n    \"Write a function to reverse a string\",\n    \"Explain the concept of async/await\",\n    \"What are your strengths and weaknesses?\"\n  ],\n  \"question_types\": [\"text\", \"text\", \"coding\", \"text\", \"text\"],\n  \"max_questions\": 5,\n  \"text_question_timer\": 120,\n  \"coding_question_timer\": 300\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/create",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "create"
                    ]
                },
                "description": "Creates a new parallel interview session with custom questions"
            },
            "response": []
        },
        {
            "name": "2. Get Session Details",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/session/{{session_id}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "session",
                        "{{session_id}}"
                    ]
                },
                "description": "Retrieves detailed information about a specific session"
            },
            "response": []
        },
        {
            "name": "3. List All Sessions",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/sessions?limit=10&offset=0",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "sessions"
                    ],
                    "query": [
                        {
                            "key": "limit",
                            "value": "10"
                        },
                        {
                            "key": "offset",
                            "value": "0"
                        },
                        {
                            "key": "status",
                            "value": "in_progress",
                            "disabled": true
                        }
                    ]
                },
                "description": "Lists all interview sessions with optional filtering"
            },
            "response": []
        },
        {
            "name": "4. Start Interview Session",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/session/{{session_id}}/start",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "session",
                        "{{session_id}}",
                        "start"
                    ]
                },
                "description": "Activates an interview session"
            },
            "response": []
        },
        {
            "name": "5. End Interview Session",
            "request": {
                "method": "POST",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/session/{{session_id}}/end",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "session",
                        "{{session_id}}",
                        "end"
                    ]
                },
                "description": "Ends an interview session and generates report"
            },
            "response": []
        },
        {
            "name": "6. Get Statistics",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/stats",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "stats"
                    ]
                },
                "description": "Retrieves overall statistics about all sessions"
            },
            "response": []
        },
        {
            "name": "7. Delete Session",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/session/{{session_id}}",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "session",
                        "{{session_id}}"
                    ]
                },
                "description": "Permanently deletes a session and all associated data"
            },
            "response": []
        },
        {
            "name": "8. Create Session with Job ID",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "    var jsonData = pm.response.json();",
                            "    pm.collectionVariables.set('session_id', jsonData.session_id);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Jane Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"phone\": \"+1234567890\",\n  \"job_id\": \"your-job-id-here\"\n}"
                },
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/create",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "create"
                    ]
                },
                "description": "Creates a session using predefined job questions"
            },
            "response": []
        },
        {
            "name": "9. List Active Sessions Only",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/sessions?status=in_progress&limit=20",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "sessions"
                    ],
                    "query": [
                        {
                            "key": "status",
                            "value": "in_progress"
                        },
                        {
                            "key": "limit",
                            "value": "20"
                        }
                    ]
                },
                "description": "Lists only active interview sessions"
            },
            "response": []
        },
        {
            "name": "10. List Completed Sessions",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{base_url}}/api/parallel_interview/sessions?status=completed&limit=50",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "parallel_interview",
                        "sessions"
                    ],
                    "query": [
                        {
                            "key": "status",
                            "value": "completed"
                        },
                        {
                            "key": "limit",
                            "value": "50"
                        }
                    ]
                },
                "description": "Lists completed interview sessions"
            },
            "response": []
        }
    ]
}